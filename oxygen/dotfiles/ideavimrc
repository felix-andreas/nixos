"
" Plugins
"

set surround
set multiple-cursors

" KJump
map <space> :action KJumpAction.Word0<cr>
map <leader><leader>l :action KJumpAction.Line<cr>

"
" BASE
"

set showmode

" turn of sounds
set visualbell
set noerrorbells

"
" REMAPS
"

let mapleader=','

" easier moving of code blocks
vnoremap > >gv
vnoremap < <gv
nnoremap > >>
nnoremap < <<

" Searching
set incsearch " search as characters are entered
set hlsearch  " highlight matches
" turn off search highlight
nnoremap <leader><space> :nohlsearch<CR>

" Page Up/Down
nnoremap <PageUp> 4<C-y>
nnoremap <PageDown> 4<C-e>

" VS Code Navigation

map <C-W> <Action>(CloseContent)
map <C-S-T> <Action>(ReopenClosedTab)
map <C-D> <Action>(SelectNextOccurrence)
map <C-P> <Action>(GotoFile)
map <C-S-P> <Action>(GotoAction)
map <C-S-O> <Action>(GotoSymbol)

